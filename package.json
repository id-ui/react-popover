    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "jest-axe": "^3.5.0",
    "kcd-scripts": "^6.7.0",
    "lint-staged": "^10.5.1",
    "path": "^0.12.7",
    "postcss": "^8.4.7",
    "postcss-loader": "^6.2.1",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-test-renderer": "^16.14.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.4",
    "webpack": "^5.0.0-rc.6",
    "webpack-cli": "^4.0.0-rc.1"
